#!/bin/sh

prefix2netmask4(){
	case "${1}" in
		'0' )	echo '0.0.0.0';;
		'1' )	echo '128.0.0.0';;
		'2' )	echo '192.0.0.0';;
		'3' )	echo '224.0.0.0';;
		'4' )	echo '240.0.0.0';;
		'5' )	echo '248.0.0.0';;
		'6' )	echo '252.0.0.0';;
		'7' )	echo '254.0.0.0';;
		'8' )	echo '255.0.0.0';;
		'9' )	echo '255.128.0.0';;
		'10' )	echo '255.192.0.0';;
		'11' )	echo '255.224.0.0';;
		'12' )	echo '255.240.0.0';;
		'13' )	echo '255.248.0.0';;
		'14' )	echo '255.252.0.0';;
		'15' )	echo '255.254.0.0';;
		'16' )	echo '255.255.0.0';;
		'17' )	echo '255.255.128.0';;
		'18' )	echo '255.255.192.0';;
		'19' )	echo '255.255.224.0';;
		'20' )	echo '255.255.240.0';;
		'21' )	echo '255.255.248.0';;
		'22' )	echo '255.255.252.0';;
		'23' )	echo '255.255.254.0';;
		'24' )	echo '255.255.255.0';;
		'25' )	echo '255.255.255.128';;
		'26' )	echo '255.255.255.192';;
		'27' )	echo '255.255.255.224';;
		'28' )	echo '255.255.255.240';;
		'29' )	echo '255.255.255.248';;
		'30' )	echo '255.255.255.252';;
		'31' )	echo '255.255.255.254';;
		'32' )	echo '255.255.255.255';;
		* )	echo '255.255.255.255';;
	esac
	return 0;

}

prefix2netmask4 ${1}

